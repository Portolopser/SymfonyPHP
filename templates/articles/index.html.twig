{% extends 'base.html.twig' %}

{% block title%}Artículos de SymphArt{% endblock %}

{% block body %}
{% if articles %}
<table class="table table-striped">
    <thead>
        <tr>
            <th>Título del artículo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        {% for article in articles %}
        <tr>
            <td>{{ article.title }}</td>
            <td>
                <a href="symphart/public/article/{{ article.id }}" class="btn btn-light">Mostrar</a>
                <!--<a href="#" class="btn btn-danger delete-article" data-id={{ article.id }}>Borrar</a>-->
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% else %}
<p> No existen artículos </p>
{% endif %}
{% endblock %}

{% block javascripts %}
    <script src="/js/main.js"></script>
{% endblock %}